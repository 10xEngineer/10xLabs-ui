.lab-tabs
    margin 20px
    .tabs-list
        overflow hidden
        li
            a
                padding 10px 15px
                text-decoration none
                font-size 12px
                color #888
                display block
                float left
        li.active
            a
                color #111
                border 1px solid #d9d9d9
                border-bottom none
                background white
    .tabs-container
        border 1px solid #d9d9d9
        min-height 200px
        margin-top -1px